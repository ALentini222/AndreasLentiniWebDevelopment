<body>
<section  style="padding:64px 16px"  id="contact">
    <div style="padding:64px 16px" id="legal">
        <p>Contact Information</p>
        <p>Telephone: 249-385-7287</p>
        <p>Email: lentiniandy@gmail.com</p>
        <small>Andreas Lentini Web Development LTD&copy;</small>
    </div>
    <form id="contactForm">
        <div class="inputBox">
            <input type="text" id="name" placeholder="Name..." required/>
        </div>
        <div class="inputBox">
            <input type="email" id="email" placeholder="example@email.com" required/>
        </div>
        <div class="inputBox">
            <input type="tel" id="phone"  pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="111-111-1111" required/>
        </div>
        <div class="inputBox">
            <textarea id="msg" cols="30" rows="10" placeholder="Message" required></textarea>
        </div>
        <div class="inputBox">
            <button type="submit">Submit</button>
        </div>
    </form>
</section>
</body>